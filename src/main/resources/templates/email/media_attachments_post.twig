{% if attachments is not empty %}
{% set images=[] %}
{% set nonImages=[] %}
{% for att in attachments %}
	{% if att.type=='PHOTO' %}
	{% set _=images.add(att) %}
	{% else %}
	{% set _=nonImages.add(att) %}
	{% endif %}
{% endfor %}
{% if images is not empty %}
<div style="padding-top: 5px; margin-bottom: -5px">
	{% for img in images -%}
	<div style="display: inline-block; margin: 0 5px 5px 0">{{ img.image | pictureForPhoto('s') }}</div>
	{%- endfor %}
</div>
{% endif %}
{% for att in nonImages %}
<div class="grayText" style="padding-top: 5px">{{ L(att.type.langKey) }}</div>
{% endfor %}
{% endif %}
